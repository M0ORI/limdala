{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "src/css/*",
      "use": "@vercel/static"
    },
    {
      "src": "src/js/*",
      "use": "@vercel/static"
    },
    {
      "src": "src/images/*",
      "use": "@vercel/static"
    },
    {
      "src": "public/static/*",
      "use": "@vercel/static"
    }

  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/login", "dest": "/login.html" },
    { "src": "/login.html", "dest": "/login.html" },
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/js/(.*)", "dest": "/js/$1" }
  ]
}
